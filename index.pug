        ul.nav.navbar-nav.navbar-right
          li#nav_about
            a(href='#sectionAbout') About
          li#nav_service
            a(href='#sectionService') Service
          li#nav_works
            a(href='#sectionWork') Works
          li#nav_contact
            a(href='#sectionContact') Contact
      // /.nav-collapse

  header#header
    .container
      img.headerIcon(src="https://awiclass.monoame.com/img/webpic/w_icon.svg", alt="Yellow Studio Logo")
