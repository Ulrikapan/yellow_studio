      .row
        .col-sm-4
          img.tri.tri-2(src="https://awiclass.monoame.com/img/webpic/w_tri2.svg")
        .col-sm-8
          img.tri.tri-3(src="https://awiclass.monoame.com/img/webpic/w_tri3.svg")
          h4.text_r2 Website Design / Development
          h4.text_r2 Interactive Art Design
      .row
        .col-xs-8
          h3.text_r3 430 MORE SUCCESS CASE
        .col-sm-4
          img.tri.tri-5(src="https://awiclass.monoame.com/img/webpic/w_tri5.svg")
      .row
        .col-sm-4
          a.btn.btn-lg.btn-default(href='#sectionWork') More Case
          img.tri.tri-4(src="https://awiclass.monoame.com/img/webpic/w_tri4.svg")


    
      
