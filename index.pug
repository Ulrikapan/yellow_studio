      img.margin.margin_index(src="https://awiclass.monoame.com/img/margin/m_index.svg")
      
  section#sectionAbout
    img.margin_about(src="https://awiclass.monoame.com/img/margin/m_about.svg")
    img#cat(src="http://awiclass.monoame.com/catpic/cat_top.png")
    #cross
    .container
      .row
        .col-sm-8.col-sm-offset-4
          img.tri.tri-1(src="https://awiclass.monoame.com/img/webpic/w_tri1.svg")
