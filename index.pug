  section#sectionContact
    .contianer
      .row
        .col-sm-6.mail
          .cover
            img(src="https://awiclass.monoame.com/img/webpic/w_mail_cover.svg")
          .letter
            h4 Dear Yellow Studio,
            br
            form
              label Name
              input(type="text" placeholder='your name...')
              label Email
              input(type="text" placeholder='your email...')
              label Contact
              textarea(wrap='virtual' placeholder='want to say something?')
              input.btn_send(type="submit" value="SEND" disabled="true")
        .col-sm-6.contact
          br
          h2 Contact
